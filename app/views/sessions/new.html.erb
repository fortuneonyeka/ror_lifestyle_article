<main class="d-flex align-items-center min-vh-100 py-3 py-md-0 main-div">
    <div class="container">
      <div class="card login-card">
        <div class="row no-gutters">
          <div class="col-md-5">
            <%= image_tag("login.jpg", class: "login-card-img")  %>
          </div>
          <div class="col-md-7">
            <div class="card-body">
              <div class="brand-wrapper">
                <h1 style="margin-right:30rem; ;color: #111; font-family: 'Helvetica Neue', sans-serif; font-size: 30px; font-weight: bold; letter-spacing: -1px; line-height: 1; text-align: center;"><%= image_tag('logo.jpg', style: 'width:50px')%> VetroMovies</h1>

              </div>
              <p class="login-card-description">Login to your account</p>
              <span class="error"> <%= flash[:login_error] if flash[:login_error] %> </span>
              <% if flash[:errors] %>
      <ul>
        <% flash[:errors].each do |error| %>
         <li class="error"> <%= error %> </li>
        <% end %>  
      </ul>
    <% end %>
                <%= form_for(:session, url: login_path) do |f| %>
                  <div class="form-group mb-4">
                    <%= f.label :username,'Username', class: 'sr-only' %>    
                    <%= f.text_field :username, class: 'form-control', id: 'username', placeholder: 'Username' %>
                  </div>
                <%= f.submit class:'btn btn-block login-btn mb-4', id: 'submit'%>
                <% end %>
                <p class="login-card-footer-text">Create a new account <%= link_to 'Signup', signup_path, class: 'text-reset' %></p> 
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>